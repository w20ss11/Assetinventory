<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bishe.again"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.NoActionBar" >
        <activity
            android:name="com.bishe.main.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bishe.main.TasksActivity"
            android:label="@string/title_activity_tasks" >
        </activity>
        <activity
            android:name="com.bishe.main.EquipmentActivity"
            android:label="@string/title_activity_equipment" >
        </activity>
        <activity
            android:name="com.bishe.main.EquipmentStateActivity"
            android:label="@string/title_activity_equipment_state" >
        </activity>
        <activity
            android:name="com.bishe.main.EquipmentLargeActivity"
            android:label="@string/title_activity_equipment_large" >
        </activity>
        
        <activity
            android:name="com.two.ui.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.two.ui.MipcaActivityCapture"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>
        <activity
            android:name="com.two.ui.ResultActivity"
            android:label="@string/title_activity_result" >
        </activity>
    </application>

</manifest>
